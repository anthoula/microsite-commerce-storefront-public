---
interface Props {
  caption?: string;
}

export const props: Props = {
  caption: '',
};

const { caption } = Astro.props;
---

<div class="diagram">
  <div><slot /></div>
  <div class="caption">{caption}</div>
</div>

<style>
  .diagram {
    margin: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
    border-radius: 0.5rem;
    border: 1px solid var(--sl-color-gray-4);
    box-shadow: var(--sl-shadow-sm);
    padding: 0;
    background-color: var(--sl-color-gray-6);
  }
  .caption.caption {
    margin-top: 0.25rem;
    margin-bottom: 1rem;
    font-size: 1rem;
    font-style: italic;
    line-height: normal;
    padding: 0 1rem;
    color: var(--sl-color-gray-2);
  }

  .dialog img {
    width: 100%;
    height: auto;
  }

  @media screen and (max-width: 600px) {
    .caption.caption {
      margin-top: 0;
      margin-bottom: 1rem;
      font-size: 1rem;
      font-style: italic;
      line-height: normal;
      padding: 0.15rem 0.5rem;
      color: var(--sl-color-gray-2);
    }
  }
</style>
