---
const { caption } = Astro.props;
---

<div class="diagram">
  <slot />
  <div class="caption">{caption}</div>
</div>

<style is:global>
  .diagram {
    margin: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
    border-radius: 0.5rem;
    border: 1px solid var(--sl-color-gray-4);
    box-shadow: var(--sl-shadow-sm);
    padding: 0;
    background-color: var(--sl-color-gray-6);
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  .ac-steps .ac-step .diagram.diagram {
    margin-bottom: 1.5rem;
  }

  .diagram.diagram > p {
    margin-top: 0;
    margin-bottom: 0;
    font-size: 0;
    line-height: 0;
  }

  .diagram-image {
    width: 100%;
    height: auto;
  }

  .caption.caption {
    font-size: 1rem;
    font-style: italic;
    line-height: normal;
    padding: 0.75rem;
    margin: 0;
    color: var(--sl-color-gray-2);
  }

  @media screen and (max-width: 600px) {
    .caption.caption {
      padding: 0.15rem 0.5rem;
    }
  }
</style>
