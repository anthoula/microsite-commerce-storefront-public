---
interface Props {
  src: {
    src: string;
    width: number;
    height: number;
    format: string;
  };
  alt: string;
}

const { src, alt } = Astro.props;
---

<div class="screenshot">
  <img src={src.src} alt={alt} style="width:100%;height:100%;" class="image" />
</div>

<style>
  .screenshot.screenshot {
    margin-bottom: 3rem;
    margin-top: 1rem;
    padding: 0;
    display: flex;
    justify-content: center;
    overflow: hidden;
    border-radius: 0.5rem;
    border: 1px solid var(--sl-color-gray-5);
    box-shadow: 0 0 5px var(--sl-color-gray-5);
  }
  .image {
    user-select: none;
    background-color: var(--sl-color-black);
    outline-width: 1px;
    outline-color: var(--sl-color-gray-5);
    object-fit: cover;
    padding: 0;
  }
</style>
