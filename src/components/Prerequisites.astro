---
import { Icons } from '@components/overrides/Icons';
import Icon from '@components/overrides/Icon.astro';

interface Props {
  requiresAdobe?: boolean;
  requiresCss?: boolean;
  requiresGithub?: boolean;
  requiresGoogle?: boolean;
  requiresHtml?: boolean;
  requiresJs?: boolean;
  requiresNode?: boolean;
  requiresSidekick?: boolean;
  requiresSharepoint?: boolean;
}

const { requiresAdobe, requiresCss, requiresGithub, requiresGoogle, requiresHtml, requiresJs, requiresNode, requiresSidekick, requiresSharepoint } = Astro.props;

const requirements = {
  requiresAdobe: Icons.adobe,
  requiresCss,
  requiresGithub: Icons.github,
  requiresGoogle,
  requiresHtml,
  requiresJs,
  requiresNode,
  requiresSidekick,
  requiresSharepoint
};
if (requiresAdobe) iconHtml += icons.html;
if (requiresCss) iconHtml += icons.css;
if (requiresGithub) iconHtml += icons.js;
if (requiresGoogle) iconHtml += icons.js;
if (requiresHtml) iconHtml += icons.js;
if (requiresJs) iconHtml += icons.js;
if (requiresNode) iconHtml += icons.js;
if (requiresSidekick) iconHtml += icons.js;
if (requiresSharepoint) iconHtml += icons.js;
---

<div style="display: flex; align-items: center; gap: 10px;">
  {icon && <Icon name={icon} class="icon" size="2.5rem" />}
</div>
