{
  "name": "dropins-monorepo",
  "description": "DropIn Kit documentation",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "astro": "cd packages/docs && pnpm run astro",
    "build": "cd packages/docs && pnpm run build",
    "clean": "rm -rf dist -w docs && rm -rf .astro -w docs && rm -rf node_modules",
    "clean-modules": "npx npkill",
    "dev": "cd packages/docs && pnpm run dev",
    "lint": "prettier --write  \"**/*.{js,jsx,ts,tsx,md,mdx,astro}\" && eslint --fix \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "prettier:check-fix": "prettier --check . --plugin prettier-plugin-astro --plugin prettier-plugin-tailwindcss",
    "prettier:write-fix": "prettier --write . --plugin prettier-plugin-astro --plugin prettier-plugin-tailwindcss",
    "preview": "cd packages/docs && pnpm run preview",
    "start": "cd packages/docs && pnpm run dev",
    "preinstall": "npx only-allow pnpm"
  },
  "packageManager": "pnpm@8.8.0"
}
