{
  "eslint.validate": ["javascript", "javascriptreact", "astro", "typescript", "typescriptreact"],
  "prettier.documentSelectors": ["**/*.astro"],
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.configPath": "prettier.config.cjs",
  "prettier.prettierPath": "",
  "prettier.printWidth": 100,
  "prettier.singleQuote": true,
  "editor.defaultFormatter": "vscode.markdown-language-features",
  "editor.formatOnSave": true,
  "prettier.enable": true,
  "prettier.ignorePath": ".prettierignore",
  "prettier.useEditorConfig": true,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "cSpell.words": [
    "astro",
    "astrojs",
    "dropin",
    "Dropin",
    "dropins",
    "how-to",
    "tailwindcss",
    "tsconfigs"
  ],
  "prettier.jsxSingleQuote": true,
  "cSpell.ignoreWords": ["stylesheet"],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 140,
  "markdown.updateLinksOnFileMove.enabled": "never",
  "markdown.validate.enabled": false,
  "markdown.validate.ignoredLinks": ["/content/**/*.mdx"],
  "markdown.validate.fileLinks.enabled": "ignore",
  "markdown.validate.fragmentLinks.enabled": "ignore",
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "html",
    "css",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "astro",
    "mdx"
  ],
  "github.copilot.advanced": {
    "no-such-reference": "ignore"
  },
  // "mdx.validate.validateMarkdownFileLinkFragments": "ignore",
  // "mdx.validate.ignoreLinks": ["./src/**/*.mdx"],
  // "mdx.validate.validateFileLinks": "ignore",
  // "mdx.validate.validateFragmentLinks": "ignore",
  "mdx.validate.validateReferences": "ignore",
  // "mdx.validate.validateUnusedLinkDefinitions": "ignore",
  // "mdx.validate.validateDuplicateLinkDefinitions": "ignore",
  "prettier.proseWrap": "always",
  "markdown.preview.linkify": false,
  // "markdown.validate.fileLinks.markdownFragmentLinks": "ignore",
  // "markdown.editor.filePaste.enabled": false,
  // "markdown.suggest.paths.enabled": false,
  // "markdown.suggest.paths.includeWorkspaceHeaderCompletions": "never",
  // "markdown.math.enabled": false,
  // "markdown.validate.referenceLinks.enabled": "ignore",
  "markdownlint.ignore": ["./src/**/*.mdx"],
  "markdownlint.config": {
    "default": false,
    "MD051": false
  },
  "markdown.occurrencesHighlight.enabled": true,
  "markdown.validate.unusedLinkDefinitions.enabled": "ignore",
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  }
}
